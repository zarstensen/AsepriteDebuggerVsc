{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "watch",
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"label": "copy-deps",
			"type": "npm",
			"script": "copy-deps",
			"isBackground": false,
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"clear": true
			},
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"label": "build-luaws",
			"type": "npm",
			"script": "build-luaws",
			"isBackground": false,
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"clear": true
			}
		},
		{
			"label": "build",
			"dependsOrder": "sequence",
			"dependsOn": [
				"watch",
				"build-luaws",
				"copy-deps"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
